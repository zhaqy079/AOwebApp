            @Html.DisplayNameFor(model => model.ItemImage)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ItemImage)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
